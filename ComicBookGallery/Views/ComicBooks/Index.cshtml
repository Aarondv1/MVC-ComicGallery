@* Start this new view by adding model directive to the top of the view*@
@model ComicBookGallery.Models.ComicBook[]
@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            
                <h4>@Html.ActionLink(item.DisplayText, "Detail", new { id = item.ID } )</h4>
                    <a href="@Url.Action("Detail", new { id = item.ID})">
                    <img src="/Images/@item.CoverFileName"
                     alt="@item.DisplayText"
                     class="img-responsive" />
            </a>


            
        </div>
    }
</div>

